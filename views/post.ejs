<link rel="stylesheet" href="/post.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

<style>
    .post{
        border: 2px solid white ;
        border-radius: 10px;
        margin:5px ;
    }
</style>

<div class="sidebar">
    <button id="myBtn" class="dropbtn">
        <img src="https://t4.ftcdn.net/jpg/04/83/90/95/360_F_483909569_OI4LKNeFgHwvvVju60fejLd9gj43dIcd.jpg"
            class="icon">
    </button>
    <p class="hide">
        <%= user.name %>
    </p>
    <a href="/api/profile/<%= user.name %>"><i class="fas fa-user"></i>Profile</a>
    <a href="/home/<%= user.name %>"><i class="fas fa-home"></i>Home</a>
    <a href="/api/friends/<%= user.name %>"><i class="fas fa-users"></i>Friends</a>
    <a class="active" href="/api/post/<%= user.name %>"><i class="fas fa-edit"></i>Posts</a>
    <a href="#c"><i class="fas fa-comment-alt"></i>Chat</a>
    <a href="/"><i class="fas fa-sign-out-alt"></i>Logout</a>
</div>

<form id="createPostForm" action="/api/post/<%= user.name %>" method="POST">
    <!-- <input type="hidden" name="username" value="<%= user.name %>"> -->
    <div class="form-group">
        <label for="title" style="color:white;">Title</label>
        <input type="text" id="title" name="title" required>
    </div>
    <div class="form-group">
        <label for="content" style="color:white;">Content</label>
        <textarea id="content" name="content" required></textarea>
    </div>
    <button type="submit" class="btn">Create Post</button>
</form>

<% if (postdata.length > 0) { %>
    <div class="posts-container">
        <% postdata.forEach(post => { %>
            <div class="post">
                <h2><%= post.title %></h2>
                <p><%= post.content %></p>
                <p>Likes: <%= post.likes %></p>
                <p>Comments: <%= post.comments %></p>
            </div>
        <% }); %>
    </div>
<% } else { %>
    <p>No posts found.</p>
<% } %>
